<?xml version="1.0" encoding="utf-8" ?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true" >
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:fillViewport="true"
      android:background="@drawable/gradient_green_down_up"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/appVersion"
        android:layout_alignParentTop="true">
      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_gravity="center"
          android:background="@color/transparent"
          android:src="@drawable/Icon"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_above="@+id/appVersion"
      android:id="@+id/separator0"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/separator1"
        android:maxLines="1"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/appVersion"
        android:textColor="@color/dark_gray"
        android:text="Версия"/>
    <View
      android:layout_width="match_parent"
      android:layout_above="@+id/lessonsLayout"
      android:id="@+id/separator1"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="-5dp"
      android:layout_marginStart="-5dp"
      android:layout_marginRight="-5dp"
      android:layout_marginEnd="-5dp"
      android:paddingTop="5dp"
                 android:paddingBottom="5dp"
      android:gravity="center"
      android:foreground="?attr/selectableItemBackground"
      android:clickable="true"
      android:id="@+id/lessonsLayout"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true">
      <TextView
          android:layout_width="match_parent"
          android:ems="20"
          android:clickable="false"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:maxLines="20"
          android:scrollbars="vertical"
          android:gravity="center"
          android:id="@+id/lessons"
          android:padding="10dp"
          android:textColor="@color/dark_gray"
          android:text="Уроки"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/lessonsLayout"
      android:id="@+id/separator2"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_below="@+id/separator2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="-5dp"
      android:layout_marginStart="-5dp"
      android:layout_marginRight="-5dp"
      android:layout_marginEnd="-5dp"
      android:paddingTop="5dp"
                 android:paddingBottom="5dp"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
      android:id="@+id/contactUsLayout"
          android:layout_centerVertical="true">
      <TextView
          android:layout_width="match_parent"
          android:ems="20"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:maxLines="20"
          android:clickable="false"
          android:gravity="center"
          android:id="@+id/contactUs"
          android:padding="10dp"
          android:textColor="@color/dark_gray"
          android:text="Дизайн и разработка с любовью :)"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/contactUsLayout"
      android:id="@+id/separator3"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_below="@+id/separator3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="-5dp"
      android:layout_marginStart="-5dp"
      android:layout_marginRight="-5dp"
      android:layout_marginEnd="-5dp"
      android:paddingTop="5dp"
                 android:paddingBottom="5dp"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
      android:id="@+id/supportUsLayout"
          android:layout_centerVertical="true">
      <TextView
          android:layout_width="match_parent"
          android:ems="20"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:clickable="false"
          android:maxLines="20"
          android:gravity="center"
          android:id="@+id/supportUs"
          android:padding="10dp"
          android:textColor="@color/dark_gray"
          android:text="Поддержать нас :)"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/supportUsLayout"
      android:id="@+id/separator4"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/thanksButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/thumb_up_outline"
            android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/bottomView"
            android:layout_margin="10dp"/>
  </RelativeLayout>
</ScrollView>