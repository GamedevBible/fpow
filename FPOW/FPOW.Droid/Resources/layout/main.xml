<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/gradient_green_down_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:id="@+id/topButtonsLayout">
  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/refresh"/>
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/callButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/flag_outline"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/topButtonsLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/level"
            android:text="19 / 100"/>/>
    </RelativeLayout>
    <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:orientation="horizontal">
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/peopleButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/settings"/>
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fiftyButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/comment_question_outline"/>
    </LinearLayout>
    </RelativeLayout>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_above="@+id/buttonsLayout"
      android:layout_alignParentTop="true">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/transparent"/>
  </FrameLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:id="@+id/buttonsLayout">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="Начать игру"
        android:id="@+id/startButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:ems="18" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Мои рекорды"
        android:id="@+id/recordsButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:ems="18" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Справка"
        android:id="@+id/guideButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:ems="18" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Дополнительно"
        android:layout_marginBottom="15dp"
        android:id="@+id/contactsButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:ems="18" />
  </LinearLayout>
</RelativeLayout>
